{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{ .Folder }}{{ if .Root }} :: root{{ end }} :: {{ .Shell }}",
  "final_space": true,
  "version": 3,
  "tooltips_action": "prepend",
  "async": true,
  "upgrade": {
    "notice": true,
    "interval": "168h",
    "auto": false,
    "source": "cdn"
  },
  "tooltips": [
    {
      "type": "kubectl",
      "style": "plain",
      "tips": ["k", "kb", "kbc", "kubectl", "helm"],
      "foreground": "cyan",
      "template": " k {{ .Context }}{{ if .Namespace }} :: {{ .Namespace}}{{end}}"
    }
  ],
  "blocks": [
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "node",
          "style": "plain",
          "foreground": "lightGreen",
          "template": " n {{ .Full }}"
        },
        {
          "type": "go",
          "style": "plain",
          "foreground": "lightBlue",
          "template": " g {{ .Full }}"
        },
        {
          "type": "java",
          "style": "plain",
          "foreground": "red",
          "template": " j {{ .Full }}"
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "lightWhite",
          "template": " {{ .CurrentDate | date .Format }}",
          "properties": {
            "time_format": "03:04:05 pm"
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "lightYellow",
          "template": " {{ .FormattedMs }}",
          "properties": {
            "threshold": 500,
            "style": "round"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground_templates": [
            "{{ if .Root }}red{{ end }}",
            "{{ if .SSHSession }}red{{ end }}"
          ],
          "template": "{{ if .Root }}root {{ else if .SSHSession }}remote {{ end }}"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "blue",
          "template": "{{ .Path }} ",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
            "{{ if or (gt .Ahead 0) (gt .Behind 0) }}yellow{{ end }}"
          ],
          "template": "{{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }} *{{ end }}{{ if gt .Ahead 0 }} ↑{{ end }}{{ if gt .Behind 0 }} ↓{{ end }}{{ if gt .StashCount 0 }} ?{{ end }}",
          "properties": {
            "fetch_status": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if eq .Code 0 }}green{{ else }}red{{ end }}"
          ],
          "template": "\n#"
        }
      ]
    }
  ]
}
