{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{ .Folder }}{{ if .Root }} :: root{{ end }} :: {{ .Shell }}",
  "final_space": true,
  "version": 3,
  "tooltips_action": "prepend",
  "async": true,
  "upgrade": {
    "notice": true,
    "interval": "168h",
    "auto": false,
    "source": "cdn"
  },
  "palette": {
    "red": "#EF5350",
    "pink": "#EC407A",
    "purple": "#AB47BC",
    "deep-purple": "#7E57C2",
    "indigo": "#5C6BC0",
    "blue": "#42A5F5",
    "light-blue": "#29B6F6",
    "cyan": "#26C6DA",
    "teal": "#26A69A",
    "green": "#66BB6A",
    "light-green": "#9CCC65",
    "lime": "#D4E157",
    "yellow": "#FFEE58",
    "amber": "#FFCA28",
    "orange": "#FFA726",
    "deep-orange": "#FF7043",
    "brown": "#8D6E63",
    "gray": "#BDBDBD",
    "blue-gray": "#78909C",
    "white": "#FFFFFF",
    "black": "#000000"
  },
  "tooltips": [
    {
      "type": "kubectl",
      "style": "plain",
      "tips": ["k", "kb", "kbc", "kubectl", "helm"],
      "foreground": "p:cyan",
      "template": " \udb82\udc33 {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}"
    }
  ],
  "blocks": [
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:light-green",
          "template": " \ued44 {{ .Full }}"
        },
        {
          "type": "go",
          "style": "plain",
          "foreground": "p:light-blue",
          "template": " \ue65e {{ .Full }}"
        },
        {
          "type": "java",
          "style": "plain",
          "foreground": "p:red",
          "template": " \ue738 {{ .Full }}"
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:blue-gray",
          "template": " {{ .CurrentDate | date .Format }}",
          "properties": {
            "time_format": "03:04:05 pm"
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:amber",
          "template": " {{ .FormattedMs }}",
          "properties": {
            "threshold": 500,
            "style": "round"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground_templates": [
            "{{ if .Root }}p:red{{ end }}",
            "{{ if .SSHSession }}p:blue{{ end }}"
          ],
          "template": "{{ if .Root }}\udb84\udd5d {{ else if .SSHSession }}\uef09 {{ end }}"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:blue",
          "template": "{{ .Path }} ",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}",
            "{{ if or (gt .Ahead 0) (gt .Behind 0) }}p:yellow{{ end }}"
          ],
          "template": "{{ .HEAD }}",
          "properties": {
            "branch_icon": "\uf418 ",
            "fetch_status": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if eq .Code 0 }}p:green{{ else }}p:red{{ end }}"
          ],
          "template": "\n$ "
        }
      ]
    }
  ]
}
